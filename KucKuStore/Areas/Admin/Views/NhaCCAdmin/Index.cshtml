@model PagedList<KucKuStore.Models.Entities.NHACC>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Index</h2>



<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong>SẢN PHẨM</strong>
                    <h3>
                        @Html.ActionLink("Thêm mới", "Create New", "Created")
                    </h3>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <tr>
                            <th>
                                Tên NCC
                            </th>
                            <th>
                                Logo
                            </th>
                            <th>
                                Mail
                            </th>
                            <th>
                                SĐT
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TENNCC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LOGO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EMAIL)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.MANCC }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.MANCC }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MANCC })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- .animated -->

<ul class="pagination">
    <li class="paginate_button page-item previous" id="bootstrap-data-table_previous">
        <a href="#" aria-controls="bootstrap-data-table" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
    </li>

    @Html.PagedListPager(Model, pageTemp => Url.Action("Index", new { pageTemp = pageTemp }), new PagedListRenderOptions()
{
    LiElementClasses = new List<string> { "tav_button", "tav_item" }
})
    <li class="paginate_button page-item ">
        <a href="#" aria-controls="bootstrap-data-table" data-dt-idx="1" tabindex="0" class="page-link">1</a>
    </li>

