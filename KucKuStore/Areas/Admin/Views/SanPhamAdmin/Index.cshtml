@model PagedList<KucKuStore.Models.Entities.SANPHAM>

@using PagedList.Mvc
@using PagedList



@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong>SẢN PHẨM</strong>
                    <h3>
                        @Html.ActionLink("Thêm mới", "Create New", "Created")
                    </h3>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <tr>
                            <th>
                                Sản phẩm
                            </th>
                            <th>
                                Danh mục
                            </th>
                            <th>
                                Sale
                            </th>
                            <th>
                                Hình ảnh
                            </th>
                            <th>
                                Hình ảnh khác
                            </th>
                            <th>
                                Giá
                            </th>

                            <th>
                                Số lượng
                            </th>

                            <th>
                                Chi tiết
                            </th>


                            <th>
                                Nhà CC
                            </th>


                            <th>
                                Ngày nhập
                            </th>

                            <th>
                                Chức năng
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DANHMUC.TENDM)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.GIAMGIA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HINHANH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HINHANHKHAC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GIA)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.SOLUONG)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CHITIET)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NHACC.TENNCC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NGAYNHAP)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MASP }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MASP }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MASP })
                            </td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- .animated -->

<ul class="pagination">
    <li class="paginate_button page-item previous" id="bootstrap-data-table_previous">
        <a href="#" aria-controls="bootstrap-data-table" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
    </li>

    @Html.PagedListPager(Model, pageTemp => Url.Action("Index", new { pageTemp = pageTemp }), new PagedListRenderOptions()
{
    LiElementClasses = new List<string> { "tav_button", "tav_item" }
})
    <li class="paginate_button page-item ">
        <a href="#" aria-controls="bootstrap-data-table" data-dt-idx="1" tabindex="0" class="page-link">1</a>
    </li>

    <li class="paginate_button page-item next" id="bootstrap-data-table_next">
        <a href="#" aria-controls="bootstrap-data-table" data-dt-idx="7" tabindex="0" class="page-link">Next</a>
    </li>
</ul>
