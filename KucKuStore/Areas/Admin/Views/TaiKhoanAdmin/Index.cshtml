@model PagedList<KucKuStore.Models.Entities.NGUOIDUNG>
@using PagedList.Mvc
@using PagedList


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Index</h2>

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong>SẢN PHẨM</strong>
                    <h3>
                        @Html.ActionLink("Thêm mới", "Create New", "Created")
                    </h3>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <th>
                            Tên đăng nhập
                        </th>
                        <th>
                            Mật khẩu
                        </th>
                        <th>
                           Mail
                        </th>
                        <th>
                            Chức năng
                        </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TENDN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MATKHAU)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MAIL)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.MAND }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.MAND }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MAND })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- .animated -->



    @Html.PagedListPager(Model, pageTemp => Url.Action("Index", new { pageTemp = pageTemp }), new PagedListRenderOptions()
{
    LiElementClasses = new List<string> { "tav_button", "tav_item" }
})
   